{
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "outDir": "dist",
    // "incremental": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
